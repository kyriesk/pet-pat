<div class="row">
    <div class="col s12 m10 offset-m1">
        <div class="card">
            <div class="card-content">
                <div class="row">
                    <div class="col s12 m2 center-align">
                        <i class="material-icons large teal-text">edit_calendar</i>
                    </div>
                    <div class="col s12 m10">
                        <span class="card-title">Edit Appointment</span>
                        <div class="divider"></div>
                        
                        <form action="/appointments/<%= appointment._id %>?_method=PUT" method="POST">
                            <!-- Pet Selection -->
                            <div class="input-field">
                                <% if (pets.length === 1 && pets[0]._id.toString() === appointment.pet._id.toString()) { %>
                                    <select name="pet" disabled>
                                        <option value="<%= pets[0]._id %>" selected>
                                            <%= pets[0].name %> (<%= pets[0].type %>)
                                        </option>
                                    </select>
                                <% } else { %>
                                    <select name="pet" required>
                                        <% pets.forEach(function(pet) { %>
                                            <option value="<%= pet._id %>" 
                                                <%= pet._id.toString() === appointment.pet._id.toString() ? 'selected' : '' %>>
                                                <%= pet.name %> (<%= pet.type %>)
                                            </option>
                                        <% }); %>
                                    </select>
                                <% } %>
                                <label>Select Pet</label>
                            </div>

                            <!-- Service Selection -->
                            <div class="input-field">
                                <select name="service" required>
                                    <% services.forEach(function(service) { %>
                                        <option value="<%= service._id %>"
                                            <%= service._id.toString() === appointment.service._id.toString() ? 'selected' : '' %>>
                                            <%= service.name %> - $<%= service.price %> (<%= service.duration %> mins)
                                        </option>
                                    <% }); %>
                                </select>
                                <label>Select Service</label>
                            </div>

                            <!-- Date and Time -->
                            <div class="row">
                                <div class="input-field col s12 m6">
                                    <input type="date" id="appointmentDate" name="appointment_date" 
                                        value="<%= formattedDate %>" required>
                                    <label for="appointmentDate">Date</label>
                                </div>
                                <div class="input-field col s12 m6">
                                    <input type="time" id="appointmentTime" name="time" 
                                        value="<%= formattedTime %>" required>
                                    <label for="appointmentTime">Time</label>
                                </div>
                            </div>

                            <!-- Notes -->
                            <div class="input-field">
                                <textarea id="notes" name="notes" class="materialize-textarea"><%= appointment.notes %></textarea>
                                <label for="notes">Notes (Optional)</label>
                            </div>

                            <div class="card-action" style="padding: 20px 0 0 0;">
                                <button type="submit" class="btn waves-effect waves-light teal">
                                    <i class="material-icons left">save</i>
                                    Save Changes
                                </button>
                                <a href="/appointments/<%= appointment._id %>" class="btn-flat waves-effect waves-teal">
                                    <i class="material-icons left">cancel</i>
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Fix for select dropdown text alignment and visibility */
    .select-dropdown li {
        min-height: auto !important;
        padding: 8px 16px !important;
    }
    .select-dropdown li span {
        white-space: normal !important;
        line-height: 1.2 !important;
        padding: 0 !important;
    }
    /* Ensure dropdown options are wide enough */
    .dropdown-content {
        min-width: 300px !important;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize select dropdowns with custom settings
        var selects = document.querySelectorAll('select');
        M.FormSelect.init(selects, {
            dropdownOptions: {
                container: document.body
            }
        });

        // Initialize textareas
        var textareas = document.querySelectorAll('.materialize-textarea');
        M.textareaAutoResize(textareas);
    });
</script> 