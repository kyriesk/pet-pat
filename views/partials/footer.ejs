<footer class="page-footer teal darken-2">
    <div class="container">
        <div class="row">
            <div class="col s12 m4">
                <h5 class="white-text">Pet-Pat Grooming Services</h5>
                <p class="grey-text text-lighten-4">Professional pet grooming services for your beloved pets.</p>
            </div>
            <div class="col s12 m4">
                <h5 class="white-text">Contact Us</h5>
                <p class="grey-text text-lighten-4">
                    <i class="material-icons tiny">phone</i>
                    <%= settings.phone %>
                </p>
                <p class="g-text text-lighten-4">
                    <i class="material-icons tiny">email</i>
                    <a href="mailto:<%= settings.email %>">
                        <%= settings.email %>
                    </a>
                </p>
                <p class="grey-text text-lighten-4">
                    <i class="material-icons tiny">access_time</i>
                    <%= settings.hours %>
                </p>
                <p class="grey-text text-lighten-4">
                    <i class="material-icons tiny">location_on</i>
                    <%= settings.address %>
                </p>
                <p class="grey-text text-lighten-4">
                    <i class="material-icons tiny">feedback</i>
                    <a href="/feedback" class="grey-text text-lighten-4">Feedback</a>
                </p>
            </div>
            <div class="col s12 m4">
                <h5 class="white-text">Follow Us</h5>
                <div class="social-links">
                    <a href="<%= settings.facebook %>" class="grey-text text-lighten-4" target="_blank"><i
                            class="material-icons">facebook</i></a>
                    <a href="<%= settings.instagram %>" class="grey-text text-lighten-4" target="_blank"><i
                            class="material-icons">photo_camera</i></a>
                    <a href="<%= settings.wechat %>" class="grey-text text-lighten-4" target="_blank"><i
                            class="material-icons">pets</i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            <div class="row">
                <div class="col s12 m6">
                    Â© <%= new Date().getFullYear() %> Pet-Pat Grooming Services
                </div>
                <div class="col s12 m6 right-align">
                    <a href="/privacy" class="grey-text text-lighten-4">Privacy Policy</a>
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    .social-links {
        margin-top: 1rem;
    }

    .social-links a {
        margin-right: 1rem;
        transition: color 0.3s ease;
    }

    .social-links a:hover {
        color: #fff !important;
    }

    .footer-copyright {
        background-color: rgba(0, 0, 0, 0.2) !important;
    }

    .g-text a,
    .grey-text a {
        color: inherit;
        text-decoration: underline;
    }
</style>