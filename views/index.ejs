<!-- Hero Section -->
<div class="parallax-container" style="height: 400px;">
    <div class="parallax">
        <img src="/img/hero-dog.jpg" alt="Pet Grooming">
    </div>
    <div class="container center" style="padding-top: 100px;">
        <h1 class="white-text text-shadow">Pet-Pat Grooming</h1>
        <h5 class="white-text text-shadow">Professional care for your furry friends</h5>
        <div class="row" style="margin-top: 40px;">
            <a href="/users/register" class="btn-large waves-effect waves-light teal darken-1">Get Started</a>
            <a href="/services" class="btn-large waves-effect waves-light white teal-text text-darken-1">Our
                Services</a>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="section white">
    <div class="container">
        <div class="row">
            <div class="col s12 center">
                <h3 class="teal-text text-darken-2">Why Choose Pet-Pat?</h3>
            </div>
        </div>

        <div class="row">
            <div class="col s12 m4">
                <div class="center">
                    <i class="material-icons large teal-text">verified_user</i>
                    <h5>Experienced Staff</h5>
                    <p>Our certified groomers have years of experience working with all breeds and temperaments.</p>
                </div>
            </div>

            <div class="col s12 m4">
                <div class="center">
                    <i class="material-icons large teal-text">spa</i>
                    <h5>Premium Products</h5>
                    <p>We use only premium, pet-safe products that clean effectively while being gentle on your pet's
                        skin.</p>
                </div>
            </div>

            <div class="col s12 m4">
                <div class="center">
                    <i class="material-icons large teal-text">schedule</i>
                    <h5>Easy Scheduling</h5>
                    <p>Book appointments online, receive reminders, and manage your pet's grooming schedule with ease.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Services Preview -->
<div class="section teal lighten-5">
    <div class="container">
        <div class="row">
            <div class="col s12 center">
                <h3 class="teal-text text-darken-2">Our Services</h3>
                <p class="flow-text">We offer a variety of grooming services tailored to your pet's needs</p>
            </div>
        </div>

        <div class="row">
            <% if (services.length> 0) { %>
                <% services.forEach(service=> { %>
                    <div class="col s12 m6">
                        <div class="card hoverable">
                            <% if (service.image) { %>
                                <div class="card-image">
                                    <img src="<%= service.image %>" alt="<%= service.name %>">
                                </div>
                            <% } %>
                            <div class="card-content">
                                <span class="card-title teal-text text-darken-1">
                                    <%= service.name %>
                                </span>
                                <p><strong>$<%= service.price.toFixed(2) %></strong> &middot; <%= service.duration %>
                                        mins</p>
                                <p>
                                    <%= service.description %>
                                </p>
                            </div>
                            <div class="card-action">
                                <a href="/services/<%= service._id %>">Learn More</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="col s12">
                                <div class="card-panel center-align grey-text">
                                    <i class="material-icons large">info</i>
                                    <p>No services available at the moment. Please check back later.</p>
                                </div>
                            </div>
                            <% } %>
        </div>

        <div class="row center">
            <a href="/services" class="btn-large waves-effect waves-light teal darken-2">View All Services</a>
        </div>
    </div>
</div>

<!-- Gallery Section -->
<div class="section white">
    <div class="container">
        <div class="row">
            <div class="col s12 center">
                <h3 class="teal-text text-darken-2">Gallery</h3>
                <p class="flow-text">Take a look at our work and happy pets</p>
            </div>
        </div>

        <!-- Photo Gallery -->
        <div class="row">
            <div class="col s12">
                <h4 class="teal-text text-darken-1 center">Photo Gallery</h4>
                <div class="divider"></div>
            </div>
        </div>

        <div class="row">
            <% if (photos && photos.length > 0) { %>
                <% photos.forEach(item => { %>
                    <div class="col s12 m6 l4">
                        <div class="card hoverable">
                            <div class="card-image waves-effect waves-block waves-light">
                                <img src="<%= item.url %>" class="responsive-img materialboxed" alt="Pet grooming photo">
                            </div>
                            <div class="card-content">
                                <span class="card-title grey-text text-darken-4"><%= item.title || 'Pet Grooming' %></span>
                                <p><%= item.description || 'Beautiful grooming results' %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col s12 center">
                    <div class="card-panel grey lighten-4">
                        <i class="material-icons large grey-text">photo_library</i>
                        <p class="grey-text">No photos available in gallery yet.</p>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Video Gallery -->
        <div class="row" style="margin-top: 40px;">
            <div class="col s12">
                <h4 class="teal-text text-darken-1 center">Video Gallery</h4>
                <div class="divider"></div>
            </div>
        </div>

        <div class="row">
            <% if (videos && videos.length > 0) { %>
                <% videos.forEach(item => { %>
                    <div class="col s12 m6">
                        <div class="card hoverable">
                            <div class="card-image">
                                <video src="<%= item.url %>" controls class="responsive-video" style="width: 100%;">
                                    Your browser does not support the video tag.
                                </video>
                            </div>
                            <div class="card-content">
                                <span class="card-title grey-text text-darken-4"><%= item.title || 'Pet Grooming Video' %></span>
                                <p><%= item.description || 'Watch our grooming process' %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col s12 center">
                    <div class="card-panel grey lighten-4">
                        <i class="material-icons large grey-text">videocam</i>
                        <p class="grey-text">No videos available in gallery yet.</p>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Testimonials -->
