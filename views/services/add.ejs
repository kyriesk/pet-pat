<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title teal-text text-darken-2">Add New Service</span>
                    <div class="divider"></div>
                    <form action="/services" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="input-field col s12">
                                <input type="text" id="name" name="name" required>
                                <label for="name">Service Name</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="description" name="description" class="materialize-textarea" required></textarea>
                                <label for="description">Description</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s6">
                                <input type="number" id="price" name="price" min="0" step="0.01" required>
                                <label for="price">Price ($)</label>
                            </div>
                            <div class="input-field col s6">
                                <input type="number" id="duration" name="duration" min="15" step="15" required>
                                <label for="duration">Duration (minutes)</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <select name="petTypes" multiple>
                                    <option value="dog">Dog</option>
                                    <option value="cat">Cat</option>
                                    <option value="bird">Bird</option>
                                    <option value="rabbit">Rabbit</option>
                                    <option value="other">Other</option>
                                </select>
                                <label>Pet Types</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <div class="file-field input-field">
                                    <div class="btn teal">
                                        <span>Image</span>
                                        <input type="file" name="image" accept="image/*">
                                    </div>
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" type="text" placeholder="Upload service image">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12">
                                <button type="submit" class="btn-large waves-effect waves-light teal">
                                    <i class="material-icons left">add</i>Add Service
                                </button>
                                <a href="/services" class="btn-large waves-effect waves-light grey">
                                    <i class="material-icons left">cancel</i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems);
    });
</script>

