<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <span class="card-title teal-text text-darken-2">Edit Service</span>
                    <div class="divider"></div>
                    <form action="/services/<%= service._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="input-field col s12">
                                <input type="text" id="name" name="name" value="<%= service.name %>" required>
                                <label for="name">Service Name</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="description" name="description" class="materialize-textarea" required><%= service.description %></textarea>
                                <label for="description">Description</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s6">
                                <input type="number" id="price" name="price" min="0" step="0.01" value="<%= service.price %>" required>
                                <label for="price">Price ($)</label>
                            </div>
                            <div class="input-field col s6">
                                <input type="number" id="duration" name="duration" min="15" step="15" value="<%= service.duration %>" required>
                                <label for="duration">Duration (minutes)</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <select name="petTypes" multiple>
                                    <option value="dog" <%= service.petTypes && service.petTypes.includes('dog') ? 'selected' : '' %>>Dog</option>
                                    <option value="cat" <%= service.petTypes && service.petTypes.includes('cat') ? 'selected' : '' %>>Cat</option>
                                    <option value="bird" <%= service.petTypes && service.petTypes.includes('bird') ? 'selected' : '' %>>Bird</option>
                                    <option value="rabbit" <%= service.petTypes && service.petTypes.includes('rabbit') ? 'selected' : '' %>>Rabbit</option>
                                    <option value="other" <%= service.petTypes && service.petTypes.includes('other') ? 'selected' : '' %>>Other</option>
                                </select>
                                <label>Pet Types</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12">
                                <% if (service.image) { %>
                                    <div class="current-image">
                                        <p><strong>Current Image:</strong></p>
                                        <img src="<%= service.image %>" alt="<%= service.name %>" style="max-width: 200px; margin: 10px 0;">
                                    </div>
                                <% } %>
                                <div class="file-field input-field">
                                    <div class="btn teal">
                                        <span>Change Image</span>
                                        <input type="file" name="image" accept="image/*">
                                    </div>
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" type="text" placeholder="Upload new service image">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12">
                                <button type="submit" class="btn-large waves-effect waves-light teal">
                                    <i class="material-icons left">save</i>Save Changes
                                </button>
                                <a href="/services/<%= service._id %>" class="btn-large waves-effect waves-light grey">
                                    <i class="material-icons left">cancel</i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var elems = document.querySelectorAll('select');
        var instances = M.FormSelect.init(elems);
    });
</script>

<style>
    .current-image {
        margin: 20px 0;
        padding: 10px;
        background: #f5f5f5;
        border-radius: 4px;
    }
    .current-image img {
        border: 1px solid #ddd;
        border-radius: 4px;
    }
</style>



