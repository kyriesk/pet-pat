<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <% if (service.image) { %>
                    <div class="card-image">
                        <img src="<%= service.image %>" alt="<%= service.name %>">
                    </div>
                <% } %>
                <div class="card-content">
                    <span class="card-title teal-text text-darken-2"><%= service.name %></span>
                    <div class="divider"></div>
                    <div class="section">
                        <h5>Service Details</h5>
                        <p><strong>Price:</strong> $<%= service.price.toFixed(2) %></p>
                        <p><strong>Duration:</strong> <%= service.duration %> minutes</p>
                        <p><strong>Description:</strong></p>
                        <p><%= service.description %></p>
                        <% if (service.petTypes && service.petTypes.length > 0) { %>
                            <p><strong>Suitable for:</strong></p>
                            <div class="chip-container">
                                <% service.petTypes.forEach(type => { %>
                                    <div class="chip teal lighten-2 white-text">
                                        <%= type.charAt(0).toUpperCase() + type.slice(1) %>
                                    </div>
                                <% }) %>
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="card-action">
                    <a href="/services" class="teal-text text-darken-2">
                        <i class="material-icons left">arrow_back</i>Back to Services
                    </a>
                    <% if (user && user.isAdmin) { %>
                        <a href="/services/<%= service._id %>/edit" class="teal-text text-darken-2">
                            <i class="material-icons left">edit</i>Edit Service
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .chip-container {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 8px;
    }
    .card-image img {
        max-height: 300px;
        object-fit: cover;
    }
</style> 