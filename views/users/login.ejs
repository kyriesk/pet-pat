<div class="row">
    <div class="col s12 m8 offset-m2 l6 offset-l3">
        <div class="card-panel">
            <h4 class="center-align teal-text text-darken-2">Login</h4>
            <form action="/users/login" method="POST">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" name="email" type="email" class="validate" required>
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" name="password" type="password" class="validate" required>
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <button type="submit" class="btn waves-effect waves-light teal darken-2 btn-large"
                            style="width: 100%;">
                            Login
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col s12 center">
                    <p>Don't have an account? <a href="/users/register" class="teal-text text-darken-2">Register</a></p>
                </div>
            </div>
        </div>
    </div>
</div>